#idea-form
	form.col-sm-4.idea-card.form-content(role="form")(data-toggle="validator")(novalidate="true")
		.form-group
			label.control-label(for="inputSuccess2")
				|	Idea title
			input.form-control.input-lg.text-center(type='text', id='inputIdea', placeholder='Add your awesome idea here', ng-model='formData.text' required)
			.help-block.with-errors
		.form-group.text-center
			button.btn.btn-primary.btn-lg(type='submit', ng-click='createIdea()') Add
		.help-block.with-errors
